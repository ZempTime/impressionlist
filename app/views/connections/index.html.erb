<h2>Active</h2>
<ul>
  <% @presenter.treasured.each do |oc| %>
    <li><%= oc.other_name %> | View</li>
    <% if oc.deniable? %>
      <%= render partial: "connections/shared/deny", locals: {connection: oc.connection} %> |
    <% end%>
  <% end %>
</ul>
<ul>
  <% @presenter.active.each do |oc| %>
    <li><%= oc.other_name %> Treasure | View</li>
    <% if oc.deniable? %>
      <%= render partial: "connections/shared/deny", locals: {connection: oc.connection} %> |
    <% end%>
  <% end %>
</ul>

<h2>Pending</h2>
<ul>
  <% @presenter.pending.each do |oc| %>
    <li>
      <%= oc.other_name %>
      <% if oc.approvable? %>
        <%= render partial: "connections/shared/approve", locals: {connection: oc.connection} %> |
      <% end%>
      <% if oc.deniable? %>
        <%= render partial: "connections/shared/deny", locals: {connection: oc.connection} %> |
      <% end%>
      View
    </li>
  <% end %>
</ul>

<h2>Deleted</h2>
<ul>
  <% @presenter.deleted.each do |oc| %>
    <li>
      <%= oc.other_name %>
      <% if oc.approvable? %>
        <%= render partial: "connections/shared/approve", locals: {connection: oc.connection} %> |
      <% end%>
      View
    </li>
  <% end %>
</ul>